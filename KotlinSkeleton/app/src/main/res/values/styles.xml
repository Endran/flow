<resources>

    <!-- Exists for inheritance purposes -->
    <style name="Skeleton" parent="Skeleton.Base"/>

    <style name="Skeleton.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Skeleton.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Skeleton.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Skeleton.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>